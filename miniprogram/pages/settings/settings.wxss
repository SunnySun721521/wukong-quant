page {
  background-color: #0d0d0d;
}

.container {
  padding: 20rpx;
  min-height: 100vh;
}

.header {
  text-align: center;
  margin-bottom: 40rpx;
  padding: 30rpx 0;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 20rpx;
}

.title {
  display: block;
  font-size: 48rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 10rpx;
}

.subtitle {
  display: block;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
}

.form-section {
  background: #1a1a1a;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
}

.form-item {
  margin-bottom: 30rpx;
}

.label {
  display: block;
  font-size: 28rpx;
  color: #ffffff;
  margin-bottom: 15rpx;
}

.input {
  width: 100%;
  padding: 20rpx;
  background: #2a2a2a;
  border: 1rpx solid #3a3a3a;
  border-radius: 8rpx;
  color: #ffffff;
  font-size: 28rpx;
}

.hint {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(102, 126, 234, 0.1);
  border-radius: 8rpx;
  border-left: 4rpx solid #667eea;
}

.hint-text {
  font-size: 24rpx;
  color: #999999;
  line-height: 1.6;
}

.button-group {
  display: flex;
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.btn {
  flex: 1;
  padding: 25rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: bold;
  border: none;
}

.btn-test {
  background: #667eea;
  color: #ffffff;
}

.btn-save {
  background: #52c41a;
  color: #ffffff;
}

.result-section {
  background: #1a1a1a;
  border-radius: 16rpx;
  padding: 30rpx;
}

.result-item {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 20rpx;
  border-radius: 8rpx;
}

.result-item.success {
  background: rgba(82, 196, 26, 0.1);
  border-left: 4rpx solid #52c41a;
}

.result-item.error {
  background: rgba(255, 77, 79, 0.1);
  border-left: 4rpx solid #ff4d4f;
}

.result-icon {
  font-size: 36rpx;
  font-weight: bold;
}

.result-item.success .result-icon {
  color: #52c41a;
}

.result-item.error .result-icon {
  color: #ff4d4f;
}

.result-message {
  flex: 1;
  font-size: 28rpx;
  color: #ffffff;
}